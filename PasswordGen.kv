<Label@Label>:
    font_size: 15

<Value_pop@Popup>:
    auto_dismiss: True
    title: 'Value ERROR'
    Label:
        size_hint_y: .9
        text: 'Value ERROR'
    Button:
        text: 'Close me!'
        on_release: root.dismiss()

<ToggleButton@Button>:
    font_size: 16
    text: root.on_and_off()
    text: self.state
    background_normal: "Green-solid-color.jpg"
    background_down: "cor-vermelha.png"
    size_hint_x: None
    on_state:
        print("Button {name} state is {estado}".format(estado=self.state , name= self.id))                

<GenGridLayout>:
    rows: 3
    cols: 1
    padding: 10
    spacing: 10
    BoxLayout:
        size_hint_y: .15
        Label:
            font_color: 255,250, 0, 1
            font_size: 25
            text: '[color=#00ff00][b]Password Generator[/b][/color]'
            markup: True
    GridLayout:
        size_hint: 1, 1
        width: 10
        id: settings
        cols: 2
        background_normal: .30, .100 ,.75 , 1
        GridLayout:
            rows: 6
            BoxLayout:
                orientation:'horizontal'
                size_hint_x: .25
                Label:
                    font_size: 20
                    text:'[u]Settings:[/u]'
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: True
                Label:
                    text: "Number of Passwords"
                    halign: 'right'
                TextInput:
                    id: num_passwords
                    size_hint_x: None
                    size_hint_x: .66
                    text: self.text
                    multiline: False
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "Numero de letras"
                    width: .78
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                TextInput:
                    id: num_letras
                    size_hint_x: None
                    size_hint_x: .33
                    text: self.text
                    multiline: False

            BoxLayout:
                orientacion: 'vertical'
                Label:
                    text: "Letras Maiusculas [A,B,C,D,E,F]"
                    width: .8
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                ToggleButton:
                    id: letras_maiusculas

            BoxLayout:
                Label:
                    text: "Letras Minuscolas [a,b,c,d,e,f]"
                    width: .8
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                ToggleButton:
                    id: letras_minusculas

            BoxLayout:
                Label:
                    text: "Numeros [1,2,3,4,5,6,7,8,9]"
                    width: .8
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                ToggleButton:
                    id: numeros

            BoxLayout:
                Label:
                    text: "Simbolos [*+?\.-'<!%#]"
                    width: .8
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                ToggleButton:
                    id: simbolos
        BoxLayout:
            Label:
                id: output
                multiline: True
                text_size: self.size
                halign: 'left'
                valign: 'top'
                text: root.passwords_final
                markup: True
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba:1,1,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                orientation: "vertical"
    BoxLayout:
        size_hint_y: None
        orientation: 'horizontal'
        Button:
            text: "Generate"
            on_release: root.verify()
            font_size: 20
            width: 1
            







